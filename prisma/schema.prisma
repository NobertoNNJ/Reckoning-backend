// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../src/database/db.sqlite"
}

model Versao {
  idVersao  String   @id @default(uuid())
  nome      String
  descricao String
  data      DateTime @default(now())
  arquivo   String
}

model Imagem {
  idImagem   String       @id @default(uuid())
  imagem     String
  personagem Personagem[]
  item       Item[]
}

model Personagem {
  idPersonagem   String @id @default(uuid())
  imagemIdImagem String
  nome           String
  descricao      String

  imagem Imagem @relation(fields: [imagemIdImagem], references: [idImagem])
}

model Item {
  idItem         String @id @default(uuid())
  imagemIdImagem String
  nome           String
  descricao      String

  imagem Imagem @relation(fields: [imagemIdImagem], references: [idImagem])
}

model Feedback {
  idFeedback String @id @default(uuid())
  atribuicao String
  feedback   String
}

model Usuario {
  idUsuario String @id @default(uuid())
  nome String
  email String @unique
  hash String
}
